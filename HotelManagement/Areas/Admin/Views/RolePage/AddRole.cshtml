@model AppRole
@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Areas/Admin/Views/Shared/_AdminUILayout.cshtml";
}

<h1>Add Role</h1>

<form method="post">
    <input type="text" asp-for="Id" hidden/>
    @Html.Label("Role Name") 
    <input type="text" asp-for="Name" required/>
    <button class="btn btn-success">Add Role</button>
</form>