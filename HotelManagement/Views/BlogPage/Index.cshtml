@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<section class="site-section bg-light">
    <div class="container">
        <div class="row mb-5">
           @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="post-entry">
                        <a href="blog-single.html"><img src="~/images/blog_images/@item.BlogImage" alt="Image placeholder" class="img-fluid"></a>
                        <div class="body-text">
                            <div class="category">@item.BlogCategory</div>
                            <h3 class="mb-3"><a href="#">@item.BlogTitle</a></h3>
                            <p class="mb-4">@item.BlogDescription.Substring(0,50)...</p>
                            <p><a href="/BlogPage/ReadMore/@item.BlogId" class="btn btn-primary btn-outline-primary btn-sm">Read More</a></p>
                        </div>
                    </div>
                </div>
            }
                
            
           
        </div>
    </div>
</section>
